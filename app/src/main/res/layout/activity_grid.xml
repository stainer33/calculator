<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:hint="0"

        android:editable="false"
        android:id="@+id/out"
        android:textSize="60sp">

    </EditText>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@android:color/background_dark"
        android:padding="10sp"
        android:text="Clear"
        android:textColor="@android:color/background_light"
        android:textSize="35sp"
        android:layout_margin="4dp"
        android:id="@+id/clear">

    </Button>

    <GridLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="4"
        tools:context=".GridActivity">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="#194060"
            android:text="1"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:id="@+id/num1">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="2"
            android:background="#194060"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:id="@+id/num2">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="#194060"
            android:layout_margin="2dp"
            android:text="3"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"
            android:id="@+id/num3">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="รท"
            android:background="@android:color/background_dark"
            android:textColor="@android:color/background_light"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:id="@+id/div">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="4"
            android:textSize="30sp"
            android:background="#194060"
            android:textColor="@android:color/background_light"
            android:id="@+id/num4">
        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="5"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:background="#194060"
            android:id="@+id/num5"
            android:textColor="@android:color/background_light">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="6"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:background="#194060"
            android:id="@+id/num6"
            android:textColor="@android:color/background_light">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="x"
            android:background="@android:color/background_dark"
            android:textColor="@android:color/background_light"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:id="@+id/multi">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="7"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:background="#194060"
            android:id="@+id/num7"
            android:textColor="@android:color/background_light">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="8"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:background="#194060"
            android:id="@+id/num8"
            android:textColor="@android:color/background_light">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="9"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:id="@+id/num9"
            android:background="#194060"
            android:textColor="@android:color/background_light">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="-"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:id="@+id/sub"
            android:background="@android:color/background_dark"
            android:textColor="@android:color/background_light">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="."
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:background="#194060"
            android:id="@+id/dot"
            android:textColor="@android:color/background_light">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="0"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:background="#194060"
            android:id="@+id/zero"
            android:textColor="@android:color/background_light">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="="
            android:id="@+id/res"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:background="@android:color/background_dark"
            android:textColor="@android:color/background_light">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:text="+"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:id="@+id/add"
            android:background="@android:color/background_dark"
            android:textColor="@android:color/background_light">

        </Button>
    </GridLayout>
</LinearLayout>